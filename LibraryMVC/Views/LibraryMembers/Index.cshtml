@model IEnumerable<LibraryMVC.Models.LibraryMember>

@{
    ViewData["Title"] = "Bibliotekets medlemmar";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <table class="table table-striped table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Förnamn</th>
                <th>Efternamn</th>
                <th>Telefonnummer</th>
                <th>Emailadress</th>
                <th>Hantera</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LibraryMemberId" class="btn btn-primary btn-sm">Ändra</a>
                        <a asp-action="Details" asp-route-id="@item.LibraryMemberId" class="btn btn-info btn-sm">Detaljer</a>
                        <a asp-action="Delete" asp-route-id="@item.LibraryMemberId" class="btn btn-danger btn-sm">Radera</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <a asp-action="Create" class="btn btn-success">Lägg till en ny medlem</a>
    </div>
</div>
<div class="image-container mt-5">
    <img src="~/Images/blomgirlang-gron-1.jpg" alt="flower" class="img-fluid" />
</div>