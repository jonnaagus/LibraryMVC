@model IEnumerable<LibraryMVC.Models.LoanRecord>

@{
    ViewData["Title"] = "Registrerade boklån";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <table class="table table-striped table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Medlem</th>
                <th>Bok</th>
                <th>Lånedatum</th>
                <th>Hantera</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LibraryMember.FirstName @item.LibraryMember.LastName</td>
                    <td>@item.BookItem.Title</td>
                    <td>@item.BorrowDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LoanRecordId" class="btn btn-primary btn-sm">Ändra</a>
                        <a asp-action="Details" asp-route-id="@item.LoanRecordId" class="btn btn-info btn-sm">Detaljer</a>
                        <a asp-action="Delete" asp-route-id="@item.LoanRecordId" class="btn btn-danger btn-sm">Radera</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <a asp-action="Create" class="btn btn-success">Nytt boklån</a>
    </div>
</div>
<div class="image-container mt-5">
    <img src="~/Images/blomgirlang-gron-1.jpg" alt="flower" class="img-fluid" />
</div>
